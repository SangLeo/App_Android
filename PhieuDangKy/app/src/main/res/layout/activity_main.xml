<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/chkToan"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:text="@string/toan"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <CheckBox
        android:id="@+id/chkVan"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:text="@string/van"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <CheckBox
        android:id="@+id/chkAnh"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:text="@string/anh"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <CheckBox
        android:id="@+id/chkHoa"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:text="@string/hoa"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <CheckBox
        android:id="@+id/chkLy"
        android:layout_width="227dp"
        android:layout_height="34dp"
        android:text="@string/ly"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnClick"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/dangky" />
</LinearLayout>